{
  "name": "boilerplate-svelte",
  "version": "1.0.0",
  "repository": "github:lagden/boilerplate-svelte",
  "description": "Boilerplate para desenvolvimento de uma aplicação utilizando Svelte.",
  "keywords": [
    "svelte",
    "template",
    "boilerplate"
  ],
  "type": "module",
  "main": "public/index.html",
  "files": [
    "public",
    "README.md"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "scripts": {
    "mkdir": "mkdir -p public",
    "cp": "cp -R static/* public/.",
    "rm": "rm -rf public/scripts/*",
    "sprite": "spritetify -d ./src/_assets/svg/ -o ./src/_components/_global/Sprite.svelte -c",
    "eslint": "eslint --config .eslintrc.cjs --ext .js,.svelte --ignore-path .gitignore .",
    "prettier": "prettier -c --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "test": "run-s eslint",
    "esbuild": "node ./esbuild.config.js",
    "build": "run-s test rm mkdir cp esbuild",
    "prestart": "npm test",
    "start": "vite --cors --port ${PORT:-5000} --host ${HOSTNAME_CUSTOM:-0.0.0.0}"
  },
  "dependencies": {
    "sirv-cli": "2.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/eslint-parser": "7.17.0",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.43",
    "@tadashi/common": "1.0.0",
    "@tadashi/spritetify": "2.0.1",
    "@tadashi/svelte-icon": "2.1.0",
    "autoprefixer": "10.4.7",
    "esbuild": "0.14.38",
    "esbuild-svelte": "0.7.0",
    "eslint": "8.15.0",
    "eslint-config-xo": "0.40.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-svelte3": "4.0.0",
    "eslint-plugin-unicorn": "42.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.13",
    "prettier": "2.6.2",
    "prettier-plugin-svelte": "2.7.0",
    "sass": "1.51.0",
    "svelte": "3.48.0",
    "svelte-preprocess": "4.10.6",
    "vite": "2.9.9"
  },
  "babel": {}
}
